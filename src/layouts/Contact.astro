---
import MainLayout from './Main.astro'
const { content } = Astro.props;
---
<MainLayout title={content.title}>
	<div
		class="calendly-inline-widget"
		>
<!-- Calendly inline widget begin -->
<div class="calendly-inline-widget" data-url="https://calendly.com/inez-hillel" style="min-width:320px;height:700px;"></div>
<script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
<!-- Calendly inline widget end -->
		</div>
<a href="https://calendly.com/inez-hillel/30min">book an appointment</a>
</MainLayout>

<style>
:global(main) {
	min-height: calc(100vh - 340px);
	margin-top: 150px 100px 8px 8px;
}

iframe {
	width: 88%;
	margin-top: 120px;
	height: 630px;
	margin-left: auto;
	margin-right: auto;
}

a {
    color: var(--secondary)
}
.loading {
	width: 50px;
	height: 50px;
	background: var(--white);
	margin: auto;

	box-shadow: 0px 0px 0 0px var(--secondary),
	            0px 0px 0 0px var(--tertiary);
	animation: loading-animation 0.5s ease infinite;
	animation-direction: alternate;
}

.loading-container {
	position: absolute;
	top: 400px;
	width: 100%;
	z-index: -99;
	animation: flip 2s steps(2) infinite;
	animation-delay: 2s;
}

.calendly-inline-widget {
	margin-top: 120px;
	display: flex;
	justify-content: center;
}

@keyframes loading-animation {
	to {
		box-shadow: 20px -20px 0 20px var(--secondary),
		           -20px 20px 0 20px var(--tertiary);
		transform: scale(0.7);
	}
}

@keyframes flip {
	to {
		transform: rotate(360deg);
	}
}
</style>
