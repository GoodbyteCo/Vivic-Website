---
import MainCentered from '../../layouts/MainCentered.astro'
import { getCollection } from 'astro:content';
import CtaButton from '../../components/InlineCtaButton.astro';

const data = await getCollection('services') 



const services: {title: string, content: string, order: number}[] = data.map((service) => {
    return {
        title: service.data.title,
        content: service.data.description,
        order: service.data.order
    }
})
---

<MainCentered>
    <h2>Our Services</h2>
    <p>
        Vivic Research offers community-focused economic and public policy research that puts people first. We provide our clients with the tools and support to meet their advocacy goals by producing comprehensive deliverables suited to mixed audiences. 
    </p>
    <ul id="services">
        {
            services.sort((a,b) => a.order - b.order).map((service) => (
                <li>
                    <h3>{service.title}</h3>
                    <p>{service.content}</p>
                </li>
            ))
        }
    </ul>
    
    <div id="ctas">
        <CtaButton link={'/work'}>
            See Our Work
        </CtaButton>
        <CtaButton link={'/contact/inez-and-robin'}>
            Get In Touch
        </CtaButton>
    </div>
</MainCentered>

<style>
    ul {
        list-style-type: none;
    }
    #services, #toolkit {
        padding-bottom: 1.2em;
    }
    #ctas {
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        padding-bottom: 1em;
    }

    h2 {
		font-size: 1.9em;
	}
    #toolkit {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        flex-wrap: wrap;
        margin: 0;
        padding-left: 0;
    }
    #services p {
        line-height: 1.8;
        margin-left: 2em;
        margin-right: 2.5em;
    }

    #services li {
		padding: 10px 30px;
    }

    #services li h3{
        font-size: 1.5rem;
        
    }

    #toolkit li {
        padding: 10px 30px;
    }

    #toolkit h3 {
        font-size: 1.5rem;
    }

   

</style>