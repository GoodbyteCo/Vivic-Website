---
const {link, idName, className} = Astro.props;
---

<a href={link} id={idName} class={className}><slot /></a>

<style>
a {
   display: block;
    padding: 15px 20px;
    max-width: 130px;
    margin: 0 auto;
    text-decoration: none;
    text-transform: uppercase;
    font-weight: bold;
    text-align: center;
    color: var(--dark);
    background: var(--white);
    box-shadow: 3px -3px 0 3px var(--secondary), -3px 3px 0 3px var(--tertiary);
    transition: all 0.4s ease;
}

a:hover, a:focus {
    box-shadow: 5px -5px 0 5px var(--secondary), -5px 5px 0 5px var(--tertiary);
    transform: scale(0.95);
}
</style>